{
  "name": "lace.js",
  "version": "0.2.0",
  "description": "Tie up your calls like you tie up your shoes",
  "scripts": {
    "env": "env",
    "build": "for t in build:es build:cjs build:umd ; do npm run $t --silent ; done",
    "clear:es": "rm -f -r dist/es && mkdir -p dist/es",
    "prebuild:es": "npm run clear:es --silent",
    "build:es": "tsc -p tsconfig.json",
    "clear:cjs": "rm -f -r dist/cjs && mkdir -p dist/cjs",
    "prebuild:cjs": "npm run clear:cjs --silent",
    "build:cjs": "rollup -c -f cjs -o dist/cjs/index.js",
    "clear:umd": "rm -f -r dist/umd && mkdir -p dist/umd",
    "prebuild:umd": "npm run clear:umd --silent",
    "build:umd": "rollup -c -f umd -n lace -o dist/umd/index.js",
    "test": "cd test ; ts-node index.tape"
  },
  "keywords": [
    "chaining",
    "tooling"
  ],
  "author": "Andr√© M. Psiorz <andre.m.arnold@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "glob": "^7.1.2",
    "rollup": "^0.56.5",
    "tape": "^4.9.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  }
}
